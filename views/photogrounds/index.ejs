<% layout('/layouts/boilerplate') %>
<div id='cluster-map'></div>
<div class="container"></div>
<h1>All Photospots</h1>
<% for(let photoground of photogrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(photoground.images.length) {%>
                    <img class="img-fluid" alt="" src="<%=photoground.images[0].url%>">
                <% } else { %>
                    <img class="img-fluid" src="" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=photoground.title%></h5>
                    <p class="card-text"><%=photoground.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=photoground.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/photogrounds/<%=photoground._id%>">View <%=photoground.title%></a>
                </div>
            </div>
        </div>
    </div>
<%}%>
<script>
    const mapToken='<%-process.env.MAPBOX_TOKEN%>';
    const photogrounds = {features: <%- JSON.stringify(photogrounds)%>};
</script>
<script src="/javascripts/clusterMap.js"></script>