<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Photoground</h1>
    <div class="col-6 offset-3">
        <form action="/photogrounds/<%=photoground._id%>?_method=PUT" method="POST" novalidate class="validated-form"
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="photoground[title]" value="<%=photoground.title%>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="photoground[location]" value="<%=photoground.location%>" required>
            </div>
            <div class="mb-3">  
                <label class="form-label" for="price">Photoground Price</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="price-label">$</span>
                    </div>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" value="<%=photoground.price%>"
                    name=photoground[price] required>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" required
                    name="photoground[description]"><%=photoground.description%></textarea>
            </div>
            <div class="mb-3">
                <label for="">Upload Images</label>
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label for="image" class="form-file-label">
                        <span class="form-file-text custom-file-label">Add more image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% photoground.images.forEach(function(img, i) { %>
                    <img src="<%=img.thumbnail%>" class="img-thumbnail" alt=""> 
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                <% }) %>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Photoground</button>
            </div>
        </form>
        <a href="/photogrounds">All Photogrounds</a>
    </div>
</div>
